                    <script>
                        var stripe = Stripe('pk_test_51HleI0Hrn8Hsbaagxqmzh72cuQJL8QEWWvUByNAQOsCKzYgJ1NxAfopfkUS4GmwjSe1fg3AWUQplwbO3RZBunrsK00ICD3DC2r');
                        var orderBtn = document.getElementById('order-btn');
                        orderBtn.addEventListener('click', function() {
                            stripe.redirectToCheckout({
